{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": [
    "desktop/src/**/*",
    "desktop/electron/**/*",
    "desktop/global.d.ts"
  ],
  "exclude": [
    "third_party/**",
    "opencv/**",
    "**/node_modules/**"
  ]
} 